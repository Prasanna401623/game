# Define a custom button style for quiz options
style quiz_button:
    size_group "quiz"
    padding (10, 5)
    xsize 500  # Increased width to fit longer text
    ysize 80  # Slightly increased height
    color "#ffffff"  # White text
    hover_color "#ffff00"  # Yellow when hovered
    background "#333333"  # Dark gray background
    hover_background "#555555"  # Lighter gray when hovered
    align (0.5, 0.5)  # Center text inside button
    text_align 0.5  # Ensure text is centered inside the button